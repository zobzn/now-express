{
  "version": 2,
  "name": "now-express",
  "builds": [
    {
      "src": "public/**/*",
      "use": "@now/static",
      "config": { "distDir": "public" }
    },
    {
      "src": "src/index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "^/.*",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      },
      "continue": true
    },
    { "src": "^/(.*)", "dest": "/public/$1" },
    { "handle": "filesystem" },
    { "src": "^/(.*)", "dest": "/src/index.js" }
  ]
}
